<div class="flex flex-col">
  <%= render Avo::PanelComponent.new(name: @page_title, display_breadcrumbs: true) do |c| %>
    <% c.with_tools do %>
      <div class="text-sm italic"><%= @page_description %></div>
    <% end %>

    <% c.with_body do %>
      <div class="flex flex-col justify-between py-6 min-h-24">
        <div class="px-6 space-y-4">
          <h3><%= @page_title %> ğŸ‘‹</h3>

          <% checkouts.each do |checkout| %>
            <p>
              Checked out by <%= checkout.customer.name %><br>
              Expected return <%= checkout.expected_return_on %><br>
              Item Checked Out <%= checkout.item.name %><br>
            </p>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
